---
const { image } = Astro.props;
---

<section class="relative w-full h-screen">
  <!-- Image de fond -->
  <img src={image} alt="Festival" class="absolute inset-0 w-full h-full object-cover">

  <!-- Overlay sombre -->
  <div class="absolute inset-0 bg-black/50"></div>

  <!-- Titre centré -->
  <div class="relative z-10 flex flex-col items-center justify-center h-full text-white text-center px-6">
    <h2 class="text-7xl font-extrabold uppercase tracking-wide drop-shadow-lg">
      CINE ECHOS
    </h2>
    <p class="text-2xl mt-4 font-light drop-shadow-lg">Le Festival du Cinéma à Héricourt</p>
  </div>
</section>

